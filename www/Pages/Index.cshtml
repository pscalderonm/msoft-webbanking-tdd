@page
@using bankingLibrary
@model IndexModel
@{
    ViewData["Title"] = "Bienvenido - Web Banking";
}

<div class="text-center">
    <h1 class="display-4">Web Banking</h1>
    <p> Pruebe una de nuestras opciones</p>
</div>

<form method="post">
  <div class="container bg-white border-bottom box-shadow mb-3 p-3">
    <h3>Su Cuenta</h3>
    Cuenta: <label id="account">@(IndexModel.Account?.Code??"N/A")</label><br/>
    Saldo: <label id="balance">@(IndexModel.Account?.Balance.ToString()??"-")</label><br/>
    Movimientos:<label id="movements">@(IndexModel.Account?.Movements.Count().ToString()??"-")</label><br/>
    <input type="submit" asp-page-handler="OpenAccount" value="Apertura de Nueva Cuenta"><br />
  </div>
</form>

<br/>

<form method="post">
   <div class="container bg-white border-bottom box-shadow mb-3 p-3">
    <h3>Operaciones</h3>
    <label for="ddlOperation">Operaci&oacute;n</label>
    <select class="dropdown" id="ddlOperation" asp-for="operation" disabled=@(IndexModel.Account?.State!=BankAccountStates.Opened)>
      <option value="D">Dep&oacute;sito</option>
      <option value="R">Retiro</option>
    </select>
    <br/>

    <label for="inpValue">Valor:</label>
    <input type="number" id="inpValue" placeholder="0.00" step="any" asp-for="amount" disabled=@(IndexModel.Account?.State!=BankAccountStates.Opened) />
    <br/>

    <input type="submit" asp-page-handler="ExecuteOperation" value="Proceder" disabled=@(IndexModel.Account?.State!=BankAccountStates.Opened)/>
    @{
      if(IndexModel.Account?.State!=BankAccountStates.Opened)
      {
        <label class="">Debe abrir la cuenta antes de realizar operaciones.</label>
      }
    }
   </div>
</form>
